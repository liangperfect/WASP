<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <include 
         android:id="@+id/chat_main_title"
        layout="@layout/title_activity"
        />
<TabHost 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    android:layout_below="@id/chat_main_title"
 >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	   <FrameLayout 
	        android:id="@android:id/tabcontent"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"> 
	        <include 
	            android:id="@+id/chat_record"
	            layout="@layout/chat_record"/>
	        <include 
	            android:id="@+id/chat_group"
	            layout="@layout/chat_group_brief"/>
	     </FrameLayout> 
	    <TabWidget 
	        android:id="@android:id/tabs"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>  
	</LinearLayout>

</TabHost>
</RelativeLayout>