<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         >

        <ImageView
            android:id="@+id/item"
            android:layout_width="@dimen/pic_width"
            android:layout_height="@dimen/pic_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/unreadMessageNum"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_gravity="right|top"
            android:layout_marginBottom="34dip"
            android:layout_marginLeft="30dip"
            android:background="@drawable/friendactivity_newnotice"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text" />
    </FrameLayout>
 <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame"
        android:layout_centerHorizontal="true"
        android:text="111"
        android:textSize="@dimen/medium_text"/>
    
</RelativeLayout>
