<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
	 android:layout_width="fill_parent"
 	 android:layout_height="0dp"
	 android:layout_weight="1" 
	 android:orientation="vertical">
     <include 
         android:id="@+id/reset_pswd_title"
        layout="@layout/title_activity"
        />
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/old_pswd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:hint="请输入旧密码"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:password="true"
            android:paddingLeft="8dp"
            android:background="@drawable/bg_input_top"/>
        <View 
			android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="@drawable/divider_input"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"/>
        <EditText 
            android:id="@+id/new_pswd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:hint="请输入新密码"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:password="true"
            android:paddingLeft="8dp"
            android:background="@drawable/bg_input_center"/>
        <View 
			android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="@drawable/divider_input"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"/>
        <EditText 
            android:id="@+id/de_new_pswd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:hint="再次输入新密码"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:password="true"
            android:paddingLeft="8dp"
            android:background="@drawable/bg_input_bottom"/>
         </LinearLayout>
